<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<smartplaylist type="movies">
    <name>Spotlight</name>
    <match>all</match>
    <rule field="rating" operator="greaterthan">
        <value>7.5</value>
    </rule>
    <limit>150</limit>
    <order direction="ascending">random</order>
</smartplaylist>
